<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

<!-- BASE LINK-->
    <link name="base_link">

    </link>

<!-- CHASSIS LINK-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.25 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.6 0 0.25"/>
            <geometry>
                <box size="1.2 0.6 0.5"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.6 0 0.25"/>
            <geometry>
                <box size="1.2 0.6 0.5"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="35" x="1.2" y="0.6" z="0.5">
            <origin xyz="0.6 0 0.25" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

<!-- LEFT DRIVE WHEEL LINK -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.35 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.1"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.25" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2.5" length="0.1" radius="0.25">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Orange</material>
    </gazebo>

<!-- RIGHT DRIVE WHEEL LINK -->
<joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.35 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.25" length="0.1"/>
        </geometry>
        <material name="orange"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.25" length="0.1"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="2.5" length="0.1" radius="0.25">
            <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="right_wheel">
    <material>Gazebo/Orange</material>
</gazebo>

<!-- LEFT DUMMY WHEEL LINK -->
<joint name="left_dummywheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_dummywheel"/>
    <origin xyz="0.95 0.35 0" rpy="-${pi/2} 0 0"/>
</joint>

<link name="left_dummywheel">
    <visual>
        <geometry>
            <cylinder radius="0.25" length="0.1"/>
        </geometry>
        <material name="orange"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.25" length="0.1"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="2.5" length="0.1" radius="0.25">
            <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="left_dummywheel">
    <material>Gazebo/Orange</material>
    <mu1 value="0.0001"/>
    <mu2 value="0.0001"/>
</gazebo>

<!-- RIGHT DUMMY WHEEL LINK -->
<joint name="right_dummywheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_dummywheel"/>
    <origin xyz="0.95 -0.35 0" rpy="${pi/2} 0 0"/>
</joint>

<link name="right_dummywheel">
    <visual>
        <geometry>
            <cylinder radius="0.25" length="0.1"/>
        </geometry>
        <material name="orange"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.25" length="0.1"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="2.5" length="0.1" radius="0.25">
            <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<gazebo reference="right_dummywheel">
    <material>Gazebo/Orange</material>
    <mu1 value="0.0001"/>
    <mu2 value="0.0001"/>
</gazebo>

</robot>